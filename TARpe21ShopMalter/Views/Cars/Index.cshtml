@model IEnumerable<TARpe21ShopMalter.Models.Car.CarIndexViewModel>
@{
    int rowNumber = 1;
}
<div class="h1">Estates</div>
<div>
    <a asp-action="Create" asp-controller="realEstates" type="submit" class="btn btn-primary">Create</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Location</th>
                <th scope="col">Country</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th scope="col">Sale Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.bodyType, @car.bodyColor</td>
                    <td>@car.carMake</td>
                    <td>@car.madeInYear</td>
                    <td>@car.price</td
                    <td>
                        <a asp-action="details" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="Cars" asp-route-id="@car.Id" type="submit" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>

@{
    ViewData["Title"] = "Home Page";
}
@Html.DropDownList("Make",
    ViewBag.Makes,
    "Select Make",
    new {@class = "form-control"})

