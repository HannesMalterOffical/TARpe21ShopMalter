@model IEnumerable<TARpe21ShopMalter.Models.Spaceship.SpaceshipIndexViewModel>
@{
    int rowNumber = 1;
}

<div class="h1">Product</div>
<div>
    <a asp-action="add" asp-controller="spaceships" type="submit" class="btn btn-primary">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Pssengers</th>
                <th scope="col">Engine Power</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceships in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.Type</td>
                    <td>@spaceships.PassengerCount</td>
                    <td>@spaceships.EnginePower</td>
                    <td>
                        <a asp-action="edit" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" type="submit" class="btn btn-danger" value="Delete" />
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>